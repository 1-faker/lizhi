<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        android:layout_marginBottom="10dp"
        android:background="@drawable/bg_dialog"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="20dp"
            android:gravity="center"
            android:text="服务协议"
            android:textColor="@color/color_202E3D"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/tv_content1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="24dp"
            android:layout_marginTop="20dp"
            android:layout_marginEnd="24dp"
            android:text="亲爱的用户，在您使用“免费小说”产品或服务前，请您务必认真阅读并充分理解协议条款，特别是免除或者限制责任等标示条款。"
            android:textColor="@color/color_556270"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/tv_content2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="24dp"
            android:layout_marginTop="20dp"
            android:layout_marginEnd="24dp"
            android:text="您点击同意后协议条款及隐私政策将对您具有法律约束力。"
            android:textColor="@color/color_556270"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/tv_content3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="24dp"
            android:layout_marginTop="20dp"
            android:layout_marginEnd="24dp"
            android:text="《免责协议》"
            android:textColor="@color/color_007AFF"
            android:textSize="14sp" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="24dp"
            android:layout_marginTop="30dp"
            android:layout_marginEnd="24dp"
            android:layout_marginBottom="20dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_disagree"
                android:layout_width="80dp"
                android:layout_height="40dp"
                android:gravity="center"
                android:text="不同意"
                android:textColor="@color/color_949EA8"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/tv_consent"
                android:layout_width="80dp"
                android:layout_height="40dp"
                android:layout_alignParentEnd="true"
                android:gravity="center"
                android:text="同意"
                android:textColor="@color/main_color"
                android:textSize="14sp" />

        </RelativeLayout>
    </LinearLayout>
</FrameLayout>